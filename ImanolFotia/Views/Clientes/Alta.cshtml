@model ImanolFotia.Models.Cliente
@{
    ViewBag.Title = "Alta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="jumbotron">
        <div class="container-fluid">
            <div class="col">
                <h2>Alta Usuario</h2>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <form>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="abm_label">Nombre</div>
                                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control abm" } })
                                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-lg-4">
                                <div class="abm_label">Apellido</div>
                                @Html.EditorFor(model => model.Apellido, new { htmlAttributes = new { @class = "form-control abm" } })
                                @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-4">
                                <br />
                                <input type="submit" class="btn btn-success abm_btn" href="#" id="abm_button" value="Agregar" />
                            </div>
                        </div>
                    </div>
                </form>
            }
            </div>
    </div>
</div>

